{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015.core",
      "es6"
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}